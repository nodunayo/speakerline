<% speakers_columns = @speakers.in_groups(4, false) %>

<% unless current_user %>
  <%= link_to users_sign_in_path do %>
    <button class="button-add">Sign up to add yourself as a Speaker</button>
  <% end %>
<% end %>

<div class="row">
  <div class="three columns">
    <% speakers_columns[0].each do |speaker| %>
      <p><%= link_to speaker.name, speaker %></p>
    <% end %>
  </div>
  <div class="three columns">
    <% speakers_columns[1].each do |speaker| %>
      <p><%= link_to speaker.name, speaker %></p>
    <% end %>
  </div>
  <div class="three columns">
    <% speakers_columns[2].each do |speaker| %>
      <p><%= link_to speaker.name, speaker %></p>
    <% end %>
  </div>
  <div class="three columns">
    <% speakers_columns[3].each do |speaker| %>
      <p><%= link_to speaker.name, speaker %></p>
    <% end %>
  </div>
</div>
